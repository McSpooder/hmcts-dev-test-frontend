{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% extends "../template.njk" %}

{% block pageTitle %}Edit Task - HMCTS Task Management{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">Edit Task</h1>
      
      {% if error %}
        {{ govukErrorSummary({
          titleText: "There was a problem",
          errorList: [
            {
              text: error
            }
          ]
        }) }}
      {% endif %}
      
      <form action="/tasks/{{ task.id }}" method="POST">
        {{ govukInput({
          label: {
            text: "Title",
            classes: "govuk-label--m"
          },
          id: "title",
          name: "title",
          value: task.title,
          required: true
        }) }}
        
        {{ govukTextarea({
          label: {
            text: "Description (optional)",
            classes: "govuk-label--m"
          },
          id: "description",
          name: "description",
          value: task.description,
          rows: 5
        }) }}
        
        {{ govukSelect({
          label: {
            text: "Status",
            classes: "govuk-label--m"
          },
          id: "status",
          name: "status",
          items: [
            {
              value: "PENDING",
              text: "Pending",
              selected: true if task.status === 'PENDING'
            },
            {
              value: "IN_PROGRESS",
              text: "In Progress",
              selected: true if task.status === 'IN_PROGRESS'
            },
            {
              value: "DONE",
              text: "Done",
              selected: true if task.status === 'DONE'
            },
            {
              value: "CANCELED",
              text: "Canceled",
              selected: true if task.status === 'CANCELED'
            }
          ]
        }) }}
        
        <div class="govuk-form-group">
          <label class="govuk-label govuk-label--m" for="dueDate">
            Due Date and Time
          </label>
          <input class="govuk-input" id="dueDate" name="dueDate" type="datetime-local" required 
            value="{{ task.dueDate | replace('Z', '') | replace('.000', '') }}">
        </div>
        
        {{ govukButton({
          text: "Update Task"
        }) }}
        
        <a href="/tasks" class="govuk-button govuk-button--secondary">Cancel</a>
      </form>
      
      <h2 class="govuk-heading-m govuk-!-margin-top-6">Quick Status Update</h2>
      <form action="/tasks/{{ task.id }}/status" method="POST" class="govuk-!-margin-bottom-6">
        <input type="hidden" name="status" id="status-field" value="">
        <div class="govuk-button-group">
          <button type="submit" class="govuk-button govuk-button--secondary" 
            onclick="document.getElementById('status-field').value='PENDING'">Pending</button>
          <button type="submit" class="govuk-button govuk-button--secondary" 
            onclick="document.getElementById('status-field').value='IN_PROGRESS'">In Progress</button>
          <button type="submit" class="govuk-button govuk-button--secondary" 
            onclick="document.getElementById('status-field').value='DONE'">Done</button>
          <button type="submit" class="govuk-button govuk-button--warning" 
            onclick="document.getElementById('status-field').value='CANCELED'">Canceled</button>
        </div>
      </form>
      
      <a href="/tasks" class="govuk-link govuk-!-margin-top-6">Return to All Tasks</a>
    </div>
  </div>
{% endblock %}