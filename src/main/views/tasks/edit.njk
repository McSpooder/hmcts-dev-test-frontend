{% extends "layout.njk" %}

{% block pageTitle %}Edit Task - HMCTS Task Management{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">Edit Task</h1>
      
      {% if error %}
        <div class="govuk-error-summary" role="alert">
          <h2 class="govuk-error-summary__title">There was a problem</h2>
          <div class="govuk-error-summary__body">
            <p>{{ error }}</p>
          </div>
        </div>
      {% endif %}
      
      <form action="/tasks/{{ task.id }}" method="POST">
        <div class="govuk-form-group">
          <label class="govuk-label" for="title">
            <strong>Title</strong>
          </label>
          <input class="govuk-input" id="title" name="title" type="text" required value="{{ task.title }}">
        </div>
        
        <div class="govuk-form-group">
          <label class="govuk-label" for="description">
            <strong>Description (optional)</strong>
          </label>
          <textarea class="govuk-textarea" id="description" name="description" rows="5">{{ task.description }}</textarea>
        </div>
        
        <div class="govuk-form-group">
          <label class="govuk-label" for="status">
            <strong>Status</strong>
          </label>
          <select class="govuk-select" id="status" name="status" required>
            <option value="PENDING" {% if task.status === 'PENDING' %}selected{% endif %}>Pending</option>
            <option value="IN_PROGRESS" {% if task.status === 'IN_PROGRESS' %}selected{% endif %}>In Progress</option>
            <option value="DONE" {% if task.status === 'DONE' %}selected{% endif %}>Done</option>
            <option value="CANCELED" {% if task.status === 'CANCELED' %}selected{% endif %}>Canceled</option>
          </select>
        </div>
        
        <div class="govuk-form-group">
          <label class="govuk-label" for="dueDate">
            <strong>Due Date and Time</strong>
          </label>
          <input class="govuk-input" id="dueDate" name="dueDate" type="datetime-local" required 
            value="{{ task.dueDate | replace('Z', '') | replace('.000', '') }}">
        </div>
        
        <button type="submit" class="govuk-button">Update Task</button>
        <a href="/tasks" class="govuk-button govuk-button--secondary">Cancel</a>
      </form>
      
      <h2 class="govuk-heading-m govuk-!-margin-top-6">Quick Status Update</h2>
      <form action="/tasks/{{ task.id }}/status" method="POST" class="govuk-!-margin-bottom-6">
        <div class="govuk-form-group">
          <label class="govuk-label" for="quick-status">
            <strong>Change Status To:</strong>
          </label>
          <div class="govuk-button-group">
            <input type="hidden" name="status" id="status-field" value="">
            <button type="submit" class="govuk-button govuk-button--secondary" 
              onclick="document.getElementById('status-field').value='PENDING'">Pending</button>
            <button type="submit" class="govuk-button govuk-button--secondary" 
              onclick="document.getElementById('status-field').value='IN_PROGRESS'">In Progress</button>
            <button type="submit" class="govuk-button govuk-button--secondary" 
              onclick="document.getElementById('status-field').value='DONE'">Done</button>
            <button type="submit" class="govuk-button govuk-button--warning" 
              onclick="document.getElementById('status-field').value='CANCELED'">Canceled</button>
          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock %}